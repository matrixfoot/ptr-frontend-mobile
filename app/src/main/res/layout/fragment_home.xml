<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <!-- App Name -->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion des réclamations clients"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_below="@id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Features Section -->
    <LinearLayout
        android:id="@+id/featuresSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/textViewAppName"
        android:layout_marginTop="32dp">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/iconconseil"
                android:contentDescription="Feature 1 Icon"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conseil"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/money"
                android:contentDescription="Feature 2 Icon"
                android:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Récupérer de l'argent"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <!-- Testimonials Section -->
    <LinearLayout
        android:id="@+id/testimonialsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_below="@id/featuresSection"
        android:layout_marginTop="32dp">

        <!-- Testimonial 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great app! It helped me a lot."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

        <!-- Testimonial 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy to use and very useful."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

        <!-- Testimonial 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Highly recommend this app!"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    </LinearLayout>

    <!-- Download Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initier réclamation"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/testimonialsSection"
        android:layout_marginTop="32dp"/>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_message"
        android:contentDescription="Contact FAB"
        android:backgroundTint="@color/white"/>

</RelativeLayout>
